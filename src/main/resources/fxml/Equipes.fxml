<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.gestaoprojetos.controller.EquipesController"
            prefWidth="980" prefHeight="650"
            stylesheets="@/css/style.css"
            styleClass="anchor-pane">

    <children>
        <!-- CARD PRINCIPAL -->
        <VBox styleClass="login-card" spacing="20"
              AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TÍTULO -->
            <HBox alignment="CENTER">
                <Label text="Gestão de Equipes" styleClass="dashboard-title"/>
            </HBox>

            <!-- PAINEL DE CADASTRO -->
            <HBox spacing="30" alignment="TOP_LEFT">

                <!-- METADE ESQUERDA: Campos -->
                <VBox spacing="15" prefWidth="440">

                    <VBox spacing="5" alignment="TOP_LEFT">
                        <Label text="Nome da Equipe:" styleClass="field-label"/>
                        <TextField fx:id="txtNome" promptText="Digite o nome"/>
                    </VBox>

                    <VBox spacing="5" alignment="TOP_LEFT">
                        <Label text="Descrição da Equipe:" styleClass="field-label"/>
                        <TextArea fx:id="txtDescricao" promptText="Digite a descrição" prefRowCount="3"
                                  styleClass="custom-hover"/>
                    </VBox>

                    <VBox spacing="5" alignment="TOP_LEFT">
                        <Label text="Gerente:" styleClass="field-label"/>
                        <ComboBox fx:id="comboGerente" prefWidth="250" styleClass="combo-gerente"/>
                    </VBox>

                </VBox>

                <!-- METADE DIREITA: Listas de membros -->
                <HBox spacing="20" prefWidth="500" alignment="TOP_CENTER">

                    <VBox spacing="10" alignment="TOP_CENTER">
                        <Label text="Membros Disponíveis:" styleClass="field-label"/>
                        <ListView fx:id="listDisponiveis" prefHeight="280" prefWidth="220" styleClass="custom-hover"/>
                        <Button fx:id="btnAdicionar" text="➕ Adicionar" prefWidth="140"/>
                    </VBox>

                    <VBox spacing="10" alignment="TOP_CENTER">
                        <Label text="Membros da Equipe:" styleClass="field-label"/>
                        <ListView fx:id="listMembros" prefHeight="280" prefWidth="220" styleClass="custom-hover"/>
                        <Button fx:id="btnRemover" text="➖ Remover" prefWidth="140"/>
                    </VBox>

                </HBox>

            </HBox>

            <!-- PAINEL DE BUSCA E AÇÕES -->
            <HBox spacing="15" alignment="CENTER_LEFT" prefWidth="900">
                <Label text="Buscar equipe:" styleClass="field-label"/>
                <TextField fx:id="txtBuscaNome" promptText="Digite o nome" prefWidth="320"/>
                <Button fx:id="btnSalvar" text="💾 Salvar" styleClass="button" prefWidth="150"/>
                <Button fx:id="btnLimpar" text="🧹 Limpar" styleClass="button" prefWidth="150"/>
            </HBox>

            <!-- TABELA DE EQUIPES -->
            <TableView fx:id="tableEquipes" prefHeight="340" prefWidth="900" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="160"/>
                    <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="280"/>
                    <TableColumn fx:id="colGerente" text="Gerente" prefWidth="130"/>
                    <TableColumn fx:id="colMembros" text="Membros" prefWidth="140"/>
                    <TableColumn fx:id="colAndamento" text="Andamento" prefWidth="80"/>
                    <TableColumn fx:id="colAcao" text="Ações" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

        </VBox>
    </children>
</AnchorPane>
