<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.gestaoprojetos.controller.LoginController"
            prefWidth="400" prefHeight="320"
            styleClass="anchor-pane">

    <children>
        <!-- Card mais compacto -->
        <VBox styleClass="login-card" spacing="15" alignment="CENTER"
              AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30"
              AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

            <!-- Título -->
            <Label text="Gestão de Projetos" styleClass="login-title"/>

            <!-- Campos -->
            <TextField fx:id="txtLogin" promptText="Usuário" styleClass="text-field" maxWidth="250"/>
            <PasswordField fx:id="txtSenha" promptText="Senha" styleClass="password-field" maxWidth="250"/>

            <!-- Botão -->
            <Button text="Entrar" onAction="#login" styleClass="button" maxWidth="120"/>
        </VBox>
    </children>
</AnchorPane>
