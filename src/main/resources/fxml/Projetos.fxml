<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Layout principal VBox -->
<VBox fx:controller="br.com.gestaoprojetos.controller.ProjetosController"
      spacing="10" alignment="center" xmlns:fx="http://javafx.com/fxml">

    <Label text="Gestão de Projetos" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtDescricao" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Data Início:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpInicio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Data Término:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpTermino" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbStatus" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="center">
        <Button text="Novo" onAction="#limparCampos"/>
        <Button text="Salvar" onAction="#salvarProjeto"/>
        <Button text="Listar Todos" onAction="#listarProjetos"/>
    </HBox>

    <TableView fx:id="tableProjetos" prefHeight="200" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
            <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="200"/>
            <TableColumn fx:id="colInicio" text="Data Início" prefWidth="100"/>
            <TableColumn fx:id="colTermino" text="Data Término" prefWidth="100"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
